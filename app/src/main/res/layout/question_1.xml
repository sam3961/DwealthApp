<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_eight"
        android:background="@color/colorDividerLine"
        android:orientation="vertical"
        android:padding="@dimen/dp_eight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/questNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_eighteen" />

            <TextView
                android:id="@+id/questTite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I plan to begin withdrawing money from my investments in "
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_eighteen" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_eight"
            android:text="Choose your Answer"
            android:id="@+id/chooseTitle"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_eighteen" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_eight">

            <RadioButton
                android:id="@+id/option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/white"
                android:text="Less than 3 years"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_sixteen" />

            <RadioButton
                android:id="@+id/option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_eight"
                android:buttonTint="@android:color/white"
                android:text="3-5 years"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_sixteen" />

            <RadioButton
                android:id="@+id/option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_eight"
                android:buttonTint="@android:color/white"
                android:text="6 - 10 years"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_sixteen" />

            <RadioButton
                android:id="@+id/option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_eight"
                android:layout_marginTop="@dimen/dp_eight"
                android:buttonTint="@android:color/white"
                android:text="11 years or more"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_sixteen" />

            <RadioButton
                android:id="@+id/option5"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/white"
                android:text="E"
                android:layout_marginBottom="@dimen/dp_sixteen"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_sixteen" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/layout7"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:scaleType="fitXY"
                android:src="@drawable/chart"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

