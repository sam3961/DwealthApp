<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_sixteen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/buy_sell"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dp_twenty_four"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_eight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Number of Shares"
            android:textSize="@dimen/sp_sixteen" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_four"
                android:background="@drawable/rounded_black_line_bg"
                android:padding="@dimen/dp_eight"
                android:text="+"
                android:textSize="@dimen/sp_twenty" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_four"
                android:background="@drawable/rounded_black_line_bg"
                android:padding="@dimen/dp_eight"
                android:text="5000"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_twenty"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_four"
                android:background="@drawable/rounded_black_line_bg"
                android:padding="@dimen/dp_eight"
                android:text="-"
                android:textSize="@dimen/sp_twenty" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_eight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Price"
            android:textSize="@dimen/sp_sixteen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="$ 99.25"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_twenty"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_eight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Amount"
            android:textSize="@dimen/sp_sixteen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="$ 4,599.25"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_twenty"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_eight">

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Type"
            android:textSize="@dimen/sp_sixteen" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:background="@drawable/rounded_black_line_bg"
            android:padding="@dimen/dp_eight"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_twenty"
            android:textStyle="bold" />

            <ImageView
                android:paddingTop="@dimen/dp_sixteen"
                android:src="@drawable/icon_expand_arrow"
                android:background="@drawable/rounded_black_line_bg"
                android:layout_width="36dp"
                android:layout_height="42dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonSell"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_fortiy_two"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_sixteen"
            android:background="@drawable/rounded_green_bg"
            android:paddingLeft="@dimen/dp_eight"
            android:paddingRight="@dimen/dp_eight"
            android:text="@string/sell"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_eighteen"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonBuy"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_fortiy_two"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_sixteen"
            android:background="@drawable/rounded_red_bg"
            android:paddingLeft="@dimen/dp_eight"
            android:paddingRight="@dimen/dp_eight"
            android:text="@string/buy"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_eighteen"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>